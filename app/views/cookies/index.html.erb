<div class='card'>
  <div class='card-header'>
    <h2>Cookies received in request</h2>
    <ul class='nav nav-tabs card-header-tabs'>
      <li class='nav-item'>
        <a class='nav-link active' id='request-raw-tab' data-toggle='tab' href='#request-raw'>Raw</a>
      </li>
      <li class='nav-item'>
        <a class='nav-link' id='request-parsed-tab' data-toggle='tab' href='#request-parsed'>Parsed</a>
      </li>
    </ul>
  </div>
  <div class='card-body'>
    <div class='tab-content'>
      <div class='tab-pane fade show active' id='request-raw'>
        <samp><%= @raw_cookies %></samp>
      </div>
      <div class='tab-pane fade' id='request-parsed'>
        <ul class="list-group list-group-flush">
          <% @cookies.each do |cookie| %>
            <li class='list-group-item'>
              <strong><%= cookie[0] %></strong>
              <br>
              <%= cookie[1] %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

<br>
<h3><center>🍪</center></h3>
<br>

<div class='card'>
  <div class='card-header'>
    <h2>Set-Cookie headers</h2>
  </div>
  <div class='card-body'>
    <ul class="list-group list-group-flush">
      <% @cookie_headers.each do |cookie| %>
        <li class='list-group-item'>
          <samp>
            <strong>Set-Cookie: </strong>
            <%= cookie %>
          </samp>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<br>
<h3><center>🍪</center></h3>
<br>

<div class='card'>
  <div class='card-header'>
    <h2>Write new cookies</h2>
  </div>
  <div class='card-body'>
    <%= form_tag do %>
      <div class='form-group'>
        <textarea class='form-control' id='cookies' name='cookies' rows='4'></textarea>
      </div>
      <div class='form-group'>
        <button type='submit' class='btn btn-primary'>Submit</button>
      </div>
    <% end %>
  </div>
</div>
